---
import Layout from "../layouts/Layout.astro";
import { Navbar } from "@/components/sections/Navbar";
import { Hero } from "@/components/sections/Hero";
import { Services } from "@/components/sections/Services";
import SuccessStory from "@/components/sections/SuccessStory.astro";
import { ValueProps } from "@/components/sections/ValueProps";
import HowWeWork from "@/components/sections/HowWeWork.astro";
import WhyCadly from "@/components/sections/WhyCadly.astro";
import { Contact } from "@/components/sections/Contact";
import Footer from "@/components/sections/Footer.astro";
---

<Layout>
  <main class="relative flex min-h-screen flex-col">
    <Navbar client:load />
    <Hero client:load />
    <Services client:visible />
    <SuccessStory />
    <ValueProps client:visible />
    <HowWeWork />
    <WhyCadly />
    <Contact client:visible />
    <Footer />
  </main>
</Layout>
